<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:outlineAmbientShadowColor="@color/black"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_list"
        android:padding="6dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/ys_dokumentasi"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_launcher_foreground"/>
        <TextView
            android:id="@+id/ys_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/ys_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Yayasan"
            android:layout_below="@+id/ys_id"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="180dp"
            />

        <TextView
            android:id="@+id/ys_nohp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="no hp"
            android:layout_marginLeft="180dp"
            android:layout_below="@+id/ys_nama"
            android:textSize="16sp"
            android:maxLines="2"
            />
        <TextView
            android:id="@+id/ys_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ys_nohp"
            android:layout_marginLeft="180dp"
            android:text="alamat"
            android:textSize="16sp"
            android:maxLines="2"
            />

    </RelativeLayout>
</RelativeLayout>