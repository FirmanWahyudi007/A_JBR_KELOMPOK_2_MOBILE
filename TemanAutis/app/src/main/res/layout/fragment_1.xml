<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Fragment1">

    <!-- TODO: Update blank fragment layout -->
    <!-- set layout for slider -->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="27dp"
                android:fontFamily="@font/cormorant_semibold"
                android:text="Teman Autis ."
                android:textColor="#0271AC"
                android:textSize="33sp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:gravity="center"
                android:layout_below="@+id/TextView1">
                <ImageView
                    android:layout_width="311dp"
                    android:layout_height="153dp"
                    android:background="@drawable/bg_button1"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"/>

                <Button
                    android:id="@+id/btn_donasi"
                    android:layout_width="118dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="193dp"
                    android:layout_marginLeft="193dp"
                    android:background="@drawable/bg_button3"
                    android:fontFamily="@font/quando"
                    android:text="Donasi"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="119dp"
                    android:layout_height="110dp"
                    android:background="@drawable/money"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="96dp"
                    android:layout_marginRight="96dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="407dp"
                android:layout_marginTop="240dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"
                android:layout_marginEnd="22dp"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="177dp"
                    android:layout_height="407dp"
                    android:background="@drawable/bg_button2"/>
                <Button
                    android:layout_width="177dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_button3"
                    android:layout_alignParentBottom="true"
                    android:text="Video"
                    android:fontFamily="@font/quando"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:id="@+id/video"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="151dp"
                    android:layout_height="144dp"
                    android:src="@drawable/video"
                    android:layout_marginTop="106dp"
                    android:layout_marginLeft="13dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="212dp"
                android:layout_marginTop="240dp"
                android:layout_marginLeft="22dp"
                android:id="@+id/Relative"
                android:layout_marginStart="22dp">
                <ImageView
                    android:layout_width="177dp"
                    android:layout_height="212dp"
                    android:background="@drawable/bg_button2"/>
                <Button
                    android:layout_width="177dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_button3"
                    android:layout_alignParentBottom="true"
                    android:text="ACARA"
                    android:id="@+id/btn_acara"
                    android:fontFamily="@font/quando"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="151dp"
                    android:layout_height="144dp"
                    android:src="@drawable/calender"
                    android:layout_marginLeft="13dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="166dp"
                android:layout_below="@+id/Relative"
                android:layout_marginTop="27dp"
                android:id="@+id/Relative1"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp">
                <ImageView
                    android:layout_width="177dp"
                    android:layout_height="166dp"
                    android:background="@drawable/bg_button2"/>
                <Button
                    android:layout_width="177dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_button3"
                    android:layout_alignParentBottom="true"
                    android:text="ARTIKEL"
                    android:id="@+id/artikel"
                    android:fontFamily="@font/quando"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="151dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/artikel"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:gravity="center"
                android:layout_below="@+id/Relative1">
                <ImageView
                    android:layout_width="311dp"
                    android:layout_height="153dp"
                    android:background="@drawable/bg_button1"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"/>

                <Button
                    android:layout_width="118dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="193dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_button3"
                    android:text="YAYASAN"
                    android:id="@+id/yayasan"
                    android:fontFamily="@font/quando"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="193dp" />
                <ImageView
                    android:layout_width="119dp"
                    android:layout_height="110dp"
                    android:background="@drawable/school"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="96dp"
                    android:layout_marginRight="96dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
