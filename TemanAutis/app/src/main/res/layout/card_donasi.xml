<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:outlineAmbientShadowColor="@color/black"
    app:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/yd_banner"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_launcher_foreground"/>
        <TextView
            android:id="@+id/yd_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/yd_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"
            android:layout_below="@+id/ys_id"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginLeft="160dp"
            />

        <TextView
            android:id="@+id/yd_yayasan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yayasan"
            android:layout_marginLeft="150dp"
            android:layout_below="@+id/ys_nama"
            android:textSize="20sp"
            android:maxLines="2"
            />
        <TextView
            android:id="@+id/yd_keterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yd_yayasan"
            android:layout_marginLeft="150dp"
            android:text="keterangan"
            android:textSize="20sp"
            android:maxLines="2"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>